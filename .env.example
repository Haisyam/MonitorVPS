# Core security
DASHBOARD_API_KEY=replace-with-strong-key
NEXT_PUBLIC_DASHBOARD_API_KEY=replace-with-strong-key
DASHBOARD_PASSWORD=replace-with-strong-password
DASHBOARD_AUTH_SECRET=replace-with-strong-secret
DASHBOARD_SESSION_TTL_SEC=86400
DASHBOARD_ALLOWED_ORIGIN=https://your-dashboard-domain.com

# Metrics collector
METRICS_CACHE_MS=1000
DETAIL_CACHE_MS=4000
PROCESS_CACHE_MS=1500
DASHBOARD_SERVICES=apache2,nginx,mysql,mariadb,postgresql,redis,pm2
DASHBOARD_PIDS=
DASHBOARD_HEALTH_URLS=https://api-unchma.servercrack.my.id/health,https://cloud.haisyam.my.id
DASHBOARD_LOG_FILES=/var/log/syslog,/var/log/nginx/error.log
DASHBOARD_LOG_TAIL_LINES=40
DASHBOARD_LOG_MAX_BYTES=204800
LOGS_CACHE_MS=5000

# Rate limiting
DASHBOARD_RATE_LIMIT=120
DASHBOARD_RATE_WINDOW_MS=60000

# Frontend
NEXT_PUBLIC_SITE_URL=https://your-dashboard-domain.com
NEXT_PUBLIC_REFRESH_INTERVAL=1000
